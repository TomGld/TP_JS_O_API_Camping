{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="game-form">

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="user-logged-in">
                    Vous êtes déjà connecté sous {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
                </div>
            {% else %}

                <h1 style="text-align: center;">Me connecter</h1>

                <div class="form-group">
                    <label for="username">Email :</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn-submit" type="submit">
                    <i class="fas fa-save"></i>
                    Se connecter
                </button>

                <div class="form-group">
				    <a class="link-auth" href="{{ path('app_register') }}">Vous n'avez pas de compte. Inscrivez-vous</a>
			    </div>
            {% endif %}

        </form>
    </div>
{% endblock %}
