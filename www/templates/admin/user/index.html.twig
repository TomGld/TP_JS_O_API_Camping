{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="game-list-container">
        <h1>User index</h1>

        <div style="text-align: center;">
            <a href="{{ path('app_admin_user_new') }}" class="add-game-btn">Créer un compte</a>
        </div>
        <table class="game-table">
            <thead>
                <tr>
                    <th>Client N°</th>
                    <th>Email</th>
                    <th>Type</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Date de naissance</th>
                    <th>Nom d'utilisateur</th>
                    <th>N° de téléphone</th>
                    <th>Adresse</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% if 'ROLE_ADMIN' in user.roles %}
                            Administrateur
                        {% else %}
                            Client
                        {% endif %}
                    </td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td style="text-align: center;">{{ user.dateOfBirth ? user.dateOfBirth|date('Y-m-d') : '' }}</td>
                    <td style="text-align: center;">{{ user.username }}</td>
                    <td style="text-align: center;">{{ user.phone ? user.phone : 'non renseigné' }}</td>
                    <td style="text-align: center;">{{ user.address ? user.address : 'non renseignée' }}</td>
                    <td>
                        <div class="game-actions">
                            <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="view-link">Voir</a>
                            <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="view-link">Éditer</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">Aucune entrée.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div style="text-align: center;">
            <a href="{{ path('app_admin_user_new') }}" class="add-game-btn">Créer un compte</a>
        </div>
    </div>

{% endblock %}
